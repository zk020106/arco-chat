{
  "name": "arco-chat",
  "version": "1.0.2",
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "build": "turbo run build",
    "build:core": "turbo run build --filter=arco-design-x",
    "publish:core": "cd packages/core && npm publish",
    "dev:core": "turbo run dev --filter=arco-design-x",
    "build:storybook": "pnpm run build:storybook --filter=arco-design-x",
    "ci:publish": "pnpm changeset publish -r --filter=arco-design-x",
    "dev": "npm run dev:playground",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "lint:packages": "oxlint ./packages",
    "lint:packages:fix": "oxlint ./packages --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "publish": "pnpm run publish:core",
    "publish:core:beta": "cd packages/core && npm publish --tag beta",
    "publish:dry-run": "cd packages/core && npm publish --dry-run",
    "publish:check": "pnpm run lint:packages && pnpm run check-types && pnpm run build:core",
    "publish:full": "pnpm run publish:check && pnpm run publish:core",
    "publish:patch": "node scripts/publish.js --type patch",
    "publish:minor": "node scripts/publish.js --type minor",
    "publish:major": "node scripts/publish.js --type major",
    "publish:beta": "node scripts/publish.js --type beta --tag beta",
    "publish:preview": "node scripts/publish.js --dry-run",
    "version:patch": "cd packages/core && npm version patch",
    "version:minor": "cd packages/core && npm version minor",
    "version:major": "cd packages/core && npm version major",
    "version:beta": "cd packages/core && npm version prerelease --preid=beta"
  },
  "engines": {
    "node": ">=18.20.0",
    "pnpm": ">=9.12.0"
  },
  "dependencies": {
    "@arco-design/web-vue": "2.57.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@datatraccorporation/markdown-it-mermaid": "^0.5.0",
    "@types/markdown-it": "^14.1.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "dompurify": "^3.2.6",
    "highlight.js": "^11.11.1",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.1.0",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-plantuml": "^1.4.1",
    "sass": "^1.89.2",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^3.0.0",
    "vue": "3.4.0",
    "vue-tsc": "^3.0.1"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "oxlint": "^1.16.0",
    "prettier": "^3.6.2"
  },
  "volta": {
    "node": "22.17.1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": [
      "oxlint --fix"
    ]
  }
}
